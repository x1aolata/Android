<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">


    <EditText
        android:id="@+id/edit_outputback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_selector"
        android:editable="false"
        android:fontFamily="monospace"
        android:gravity="right|bottom"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:singleLine="false"
        android:textColor="#5C5B5B"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/edit_output1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_selector"
        android:editable="false"
        android:fontFamily="monospace"
        android:gravity="right|bottom"
        android:maxLines="2"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:singleLine="false"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_delete" />

            <ImageButton
                android:id="@+id/button_left"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_left" />

            <ImageButton
                android:id="@+id/button_right"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_right" />

            <ImageButton
                android:id="@+id/button_division"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_division" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageButton
                android:id="@+id/button_7"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_7" />

            <ImageButton
                android:id="@+id/button_8"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_8" />

            <ImageButton
                android:id="@+id/button_9"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_9" />

            <ImageButton
                android:id="@+id/button_multiply"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_multiply" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageButton
                android:id="@+id/button_4"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_4" />

            <ImageButton
                android:id="@+id/button_5"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_5" />

            <ImageButton
                android:id="@+id/button_6"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_6" />

            <ImageButton
                android:id="@+id/button_minus"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_minus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageButton
                android:id="@+id/button_1"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_1" />

            <ImageButton
                android:id="@+id/button_2"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_2" />

            <ImageButton
                android:id="@+id/button_3"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_3" />

            <ImageButton
                android:id="@+id/button_plus"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageButton
                android:id="@+id/button_ac"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_ac" />

            <ImageButton
                android:id="@+id/button_0"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_0" />

            <ImageButton
                android:id="@+id/button_point"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_point" />

            <ImageButton
                android:id="@+id/button_equal"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:padding="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_equal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>