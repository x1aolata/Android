<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AlterSpotFragment"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/RED" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="修改地点信息"
        android:textSize="30dp" />


        <org.angmarch.views.NiceSpinner
            android:id="@+id/alter_spot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:background="@color/AlterSpotFragment"
            />

    <TableLayout
        android:id="@+id/TableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,3">

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="名称:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edittext_alterfrag_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="馨宁楼"
                android:inputType="text"
                android:textSize="20dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="编号:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edittext_alterfrag_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="12"
                android:inputType="number"
                android:textSize="20dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="地点介绍:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edittext_alterfrag_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="这里风景真美"
                android:inputType="textMultiLine"
                android:textSize="20dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="经度:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edittext_alterfrag_longitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="115.580702"
                android:inputType="numberDecimal"
                android:textSize="20dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="纬度:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edittext_alterfrag_latitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="38.889632"
                android:inputType="numberDecimal"
                android:textSize="20dp" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button_alterRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改信息" />


</LinearLayout>