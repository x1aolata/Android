<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_margin="15dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="修改景点信息"
            android:textColor="@color/textColor"
            android:textSize="30sp" />


        <org.angmarch.views.NiceSpinner
            android:id="@+id/alter_spot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Spinder"
            android:textSize="15dp" />

        <TableLayout
            android:id="@+id/TableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,3">

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="名称:"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edittext_alterfrag_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="编号:"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edittext_alterfrag_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="地点介绍:"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edittext_alterfrag_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:inputType="textMultiLine"
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="经度:"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edittext_alterfrag_longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="纬度:"
                    android:textColor="@color/textColor"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edittext_alterfrag_latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/textColorHint"
                    android:textColor="@color/textColor"
                    android:textSize="20sp" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/button_alterRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改信息" />


    </LinearLayout>
</LinearLayout>